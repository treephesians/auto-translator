{
  "manifest_version": 3,
  "name": "실시간 자막 번역기",
  "version": "1.0",
  "description": "영어 자막을 실시간으로 한국어로 번역하여 표시합니다.",
  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": ["https://*/*", "http://*/*"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "자막 번역기"
  }
}
